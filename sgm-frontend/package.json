{
  "name": "sgm-desktop",
  "private": true,
  "version": "0.1.0",
  "main": "electron-dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:build && electron .\"",
    "lint": "eslint .",
    "dist": "npm run build && npm run electron:build && electron-builder --config.win.signAndEditExecutable=false",
    "dist:win": "npm run build && npm run electron:build && electron-builder --win nsis --config.win.signAndEditExecutable=false",
    "dist:portable": "npm run build && npm run electron:build && electron-builder --win portable --config.win.signAndEditExecutable=false"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.17",
    "antd": "^5.29.3",
    "axios": "^1.13.5",
    "electron-store": "^8.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.sgm.desktop",
    "productName": "SGM",
    "artifactName": "SGM Setup ${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-dist/**/*",
      "package.json"
    ],
    "win": {
      "icon": "build/icon.ico",
      "executableName": "SGM",
      "signAndEditExecutable": false,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "shortcutName": "SGM",
      "uninstallDisplayName": "SGM"
    }
  }
}
